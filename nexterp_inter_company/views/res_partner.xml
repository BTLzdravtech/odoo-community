<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_res_partner_inter_company" model="ir.ui.view">
        <field name="name">view_res_partner_inter_company</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="after">
                <div class="">
                    <group class="">
                        <field name="is_inter_company" attrs="{'invisible':[('company_type', '=', 'person')]}" />
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>